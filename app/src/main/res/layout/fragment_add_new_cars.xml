<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gray"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddNewCarsFragment">

    <ImageButton
        android:id="@+id/ib_back_arrow"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:paddingStart="10dp"
        android:background="@drawable/background_white"
        android:src="@drawable/icon_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_add_new_car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/jost_bold"
        android:text="Add new car"
        android:textSize="24sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/ib_back_arrow"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/btnSelectImage"
        android:layout_width="360dp"
        android:layout_height="180dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/background_borders"
        android:src="@drawable/icon_add_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_add_new_car" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jost"
        android:text="Car Name"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/et_car_name"
        app:layout_constraintStart_toStartOf="@+id/et_car_name" />

    <EditText
        android:id="@+id/et_car_name"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/background_borders"
        android:fontFamily="@font/jost"
        android:imeOptions="actionNext"
        android:maxLength="15"
        android:hint=""
        android:inputType="text"
        android:paddingStart="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSelectImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jost"
        android:text="Car Model"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/et_car_model"
        app:layout_constraintStart_toStartOf="@+id/et_car_model" />

    <EditText
        android:id="@+id/et_car_model"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/background_borders"
        android:fontFamily="@font/jost"
        android:hint=""
        android:inputType="text"
        android:paddingStart="20dp"
        android:maxLength="15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_car_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jost"
        android:text="Car Brand"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/et_car_brand"
        app:layout_constraintStart_toStartOf="@+id/et_car_brand" />

    <EditText
        android:id="@+id/et_car_brand"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginTop="48dp"
        android:maxLength="15"
        android:background="@drawable/background_borders"
        android:fontFamily="@font/jost"
        android:hint=""
        android:inputType="text"
        android:paddingStart="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_car_model" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_add_car"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_shape"
        android:fontFamily="@font/jost_bold"
        android:gravity="center"
        android:text="Add Car"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />


</androidx.constraintlayout.widget.ConstraintLayout>