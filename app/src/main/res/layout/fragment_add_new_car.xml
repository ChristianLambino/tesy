<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddNewCarFragment">

    <ImageButton
        android:id="@+id/ib_back_arrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:paddingStart="10dp"
        android:background="@color/blue"
        android:src="@drawable/icon_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_add_new_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/jost_bold"
        android:text="Add new car"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@id/ib_back_arrow"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/icon_account_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_add_new_car" />


    <EditText
        android:id="@+id/et_car_name"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:background="@drawable/background_gray"
        android:hint="Enter Car Name"
        android:paddingStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@id/ib_back_arrow"
        app:layout_constraintTop_toBottomOf="@id/iv_profile_image"/>

    <EditText
        android:id="@+id/et_car_model"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:background="@drawable/background_gray"
        android:hint="Enter Car Model"
        android:paddingStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@id/ib_back_arrow"
        app:layout_constraintTop_toBottomOf="@id/et_car_name"/>

    <EditText
        android:id="@+id/et_car_number"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:background="@drawable/background_gray"
        android:hint="Enter Car Number"
        android:paddingStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@id/ib_back_arrow"
        app:layout_constraintTop_toBottomOf="@id/et_car_model"/>

    <Button
        android:id="@+id/bt_add_car"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginTop="240dp"
        android:gravity="center"
        android:text="Add Car"
        android:textStyle="bold"
        android:background="@color/blue"
        app:layout_constraintStart_toStartOf="@id/ib_back_arrow"
        app:layout_constraintTop_toBottomOf="@id/et_car_number" />


</androidx.constraintlayout.widget.ConstraintLayout>