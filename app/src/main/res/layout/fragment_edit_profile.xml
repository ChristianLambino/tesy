<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EditProfileFragment">

    <ImageButton
        android:id="@+id/ib_back_arrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_arrow_back"
        android:paddingStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/jost_bold"
        android:text="Edit Profile"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@id/ib_back_arrow"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/icon_account_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_profile" />

    <TextView
        android:id="@+id/tv_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/jost_bold"
        android:text="Benedict David Christian Ivo"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_profile_image" />

    <TextView
        android:id="@+id/tv_gmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/jost"
        android:text="bdci.prime@gmail.com"
        android:textSize="15sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_full_name" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20dp"
        android:fontFamily="@font/jost_bold"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@id/ib_back_arrow"
        app:layout_constraintTop_toBottomOf="@id/tv_gmail"/>
    
    <EditText
        android:id="@+id/et_edit_full_name"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:text="Benedict David Christian Ivo"
        android:hint="Full Name"
        android:paddingStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_name"/>

    <TextView
        android:id="@+id/tv_email_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:textSize="20dp"
        android:fontFamily="@font/jost_bold"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@id/ib_back_arrow"
        app:layout_constraintTop_toBottomOf="@id/et_edit_full_name"/>

    <EditText
        android:id="@+id/et_email_address"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:text="bdci.prime@@gmail.com"
        android:hint="Email Address"
        android:paddingStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_email_address"/>

    <TextView
        android:id="@+id/tv_contact_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Number"
        android:textSize="20dp"
        android:fontFamily="@font/jost_bold"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@id/ib_back_arrow"
        app:layout_constraintTop_toBottomOf="@id/et_email_address"/>

    <EditText
        android:id="@+id/et_contact_number"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:text="0969-010-1010"
        android:hint="Contact Number"
        android:paddingStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_contact_number"/>

    <Button
        android:id="@+id/bt_update"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:text="Update"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@color/blue"
        app:layout_constraintEnd_toEndOf="@id/et_contact_number"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/et_contact_number"
        app:layout_constraintTop_toBottomOf="@id/et_contact_number" />


</androidx.constraintlayout.widget.ConstraintLayout>