<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/garage_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="GarageFragment">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/sv_search"
        android:layout_width="345dp"
        android:layout_height="50dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_borders"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="#8A00A6FF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_all"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="50dp" />

        <TextView
            android:id="@+id/tv_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/iv_all"
            android:layout_alignEnd="@id/iv_all"
            android:layout_alignBottom="@id/iv_all"
            android:layout_marginBottom="-20dp"
            android:gravity="center"
            android:text="All" />

        <ImageView
            android:id="@+id/iv_engines"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignStart="@id/iv_all"
            android:layout_alignBottom="@id/tv_all"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="-65dp"
            android:src="@drawable/icon_engines" />

        <TextView
            android:id="@+id/tv_engines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/iv_engines"
            android:layout_alignEnd="@id/iv_engines"
            android:layout_alignBottom="@id/iv_engines"
            android:layout_marginBottom="-20dp"
            android:text="Engines" />

        <ImageView
            android:id="@+id/iv_exhausts"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignStart="@id/iv_all"
            android:layout_alignBottom="@id/tv_engines"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="-65dp"
            android:src="@drawable/icon_exhausts" />

        <TextView
            android:id="@+id/tv_exhausts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_exhausts"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="-20dp"
            android:gravity="center"
            android:text="Exhausts" />

        <ImageView
            android:id="@+id/iv_body_kits"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignStart="@id/iv_all"
            android:layout_alignBottom="@id/tv_exhausts"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="-65dp"
            android:src="@drawable/icon_body_kits" />

        <TextView
            android:id="@+id/tv_body_kits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_body_kits"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="-20dp"
            android:gravity="center"
            android:text="Kits" />

        <ImageView
            android:id="@+id/iv_body_sprays"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignStart="@id/iv_all"
            android:layout_alignBottom="@id/tv_body_kits"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="-65dp"
            android:src="@drawable/icon_body_sprays" />

        <TextView
            android:id="@+id/tv_body_sprays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_body_sprays"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="-20dp"
            android:gravity="center"
            android:text="Sprays" />

        <ImageView
            android:id="@+id/iv_spoilers"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignStart="@id/iv_all"
            android:layout_alignBottom="@id/tv_body_sprays"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="-65dp"
            android:src="@drawable/icon_spoilers" />

        <TextView
            android:id="@+id/tv_spoilers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_spoilers"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="-20dp"
            android:gravity="center"
            android:text="Spoilers" />

        <ImageView
            android:id="@+id/iv_tires"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignStart="@id/iv_all"
            android:layout_alignBottom="@id/tv_spoilers"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="-65dp"
            android:src="@drawable/icon_tires" />

        <TextView
            android:id="@+id/tv_tires"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_tires"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="-20dp"
            android:gravity="center"
            android:text="Tires" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv_scroll_view"
        android:layout_width="352dp"
        android:layout_height="912dp"
        app:layout_constraintStart_toEndOf="@+id/relativeLayout"
        app:layout_constraintTop_toBottomOf="@+id/sv_search">


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
