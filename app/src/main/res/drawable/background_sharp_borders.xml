        xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle" >
        <!-- This is the stroke you want to define -->
        <stroke
            android:width="1dp"
            android:color="@color/black"/>
    </shape>
</item>
</layer-list>